{
    "compilerOptions": {
      "lib": [
        "es2017",
        "DOM"
      ],
      "module": "commonjs",
      "noImplicitReturns": true,    
      "esModuleInterop": true,
      "outDir": "dist",
      "sourceMap": true,
      "target": "es5",
      "declaration": true,
      "types": [
        "mocha", "node", "chai"
      ]
    },
    "compileOnSave": true,
    "include": [
    "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "**/*.spec.ts"
    ]
    
  }